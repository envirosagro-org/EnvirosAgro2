rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- CORE ENVIROSAGRO HELPER FUNCTIONS ---
    
    function isSignedIn() { 
      return request.auth != null; 
    }
    
    function isOwner(stewardId) { 
      return isSignedIn() && (
        request.auth.uid == stewardId
      ); 
    }

    function isAuditor() { 
      // Allows checking if the user's UID or Email is registered as an auditor
      // Uses a safer exists check
      return exists(/databases/$(database)/documents/auditors/$(request.auth.uid)) ||
             (request.auth.token.email != null && exists(/databases/$(database)/documents/auditors/$(request.auth.token.email)));
    }

    // --- COLLECTION PROTOCOLS ---

    // 1. Stewards: Personal node dossier
    match /stewards/{stewardId} {
      allow read: if isSignedIn();
      // Explicitly allow both create and update for the user's own profile
      allow create: if isSignedIn() && request.auth.uid == stewardId;
      allow update: if isSignedIn() && request.auth.uid == stewardId;
      allow delete: if false;
    }

    // 2. Signals: Encrypted engagement shards
    match /signals/{signalId} {
      allow read: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.stewardId == request.auth.uid;
      allow delete: if false; 
    }

    // 3. Products & Industrial Assets
    match /products/{productId} {
      allow read: if true; 
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow delete: if false;
    }

    // 4. Live Inflow (Industrial Shards in processing)
    match /live_products/{id} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow delete: if false;
    }

    // 5. Media Ledger & Knowledge Shards (AgroInPDF)
    match /media_ledger/{shardId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow delete: if false;
    }
    
    match /books/{bookId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow delete: if false;
    }

    // 6. Financial Ledger (Transactions): Absolute Immutability
    match /transactions/{txId} {
      allow read: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow create: if isSignedIn();
      allow update, delete: if false; 
    }

    // 7. Missions & Contracts
    match /contracts/{contractId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
      allow delete: if false;
    }
    
    match /projects/{projectId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow delete: if false;
    }

    // 8. Orders: Procurement Shards
    match /orders/{orderId} {
      allow read: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow delete: if false;
    }

    // 9. Collectives: Steward Guilds
    match /collectives/{id} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
      allow delete: if false;
    }

    // 10. Social Hub: Posts & Connections
    match /social_posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.stewardId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.stewardId == request.auth.uid;
    }

    match /connections/{connectionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if false;
    }

    // 11. Telemetry & Industrial Units
    match /telemetry/{esin} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    match /industrial_units/{unitId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
    }
    
    match /tasks/{taskId} {
      allow read: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
      allow write: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
    }
    
    match /patents/{patentId} {
      allow read: if true;
      allow write: if isSignedIn() && (resource.data.stewardId == request.auth.uid || isAuditor());
    }

    // 12. Auditors: Internal HQ Authority
    match /auditors/{emailOrUid} {
      allow read: if isSignedIn();
      allow write: if false; 
    }
  }
}