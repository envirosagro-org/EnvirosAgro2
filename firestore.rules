
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isSignedIn() { return request.auth != null; }
    function isOwner(stewardId) { return request.auth.uid == stewardId; }
    function isAuditor() { return exists(/databases/$(database)/documents/auditors/$(request.auth.token.email)); }

    // --- COLLECTION RULES ---

    // Stewards can manage their own profiles
    match /stewards/{stewardId} {
      allow read: if isSignedIn();
      allow write: if isOwner(stewardId);
    }
    
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Signals (Notifications)
    match /signals/{signalId} {
      allow read: if isSignedIn() && (resource == null || isOwner(resource.data.stewardId));
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && isOwner(resource.data.stewardId);
    }

    // Industrial Assets & Registry
    match /products/{productId} {
      allow read: if true; 
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if false; 
    }

    // Industrial Units
    match /industrial_units/{unitId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Live Products / Processes
    match /live_products/{productId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Tasks
    match /tasks/{taskId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Carbon Ingest & Telemetry
    match /telemetry/{esin} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Institutional Missions & Projects
    match /contracts/{contractId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }
    
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Orders
    match /orders/{orderId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Financial Ledger
    match /transactions/{txId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false; 
    }

    // Internal Auditor Registry
    match /auditors/{email} {
      allow read: if isSignedIn();
      allow write: if false; 
    }

    // Recovery Shards
    match /recovery_shards/{email} {
      allow read, write: if true; // Public access for recovery process, managed by TTL
    }
  }
}
